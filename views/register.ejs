<%- include('partials/header') %>

    <div id="main-body">
    <form id="register" class="row g-3" action="/register" method="POST">
        <div class="col-md-12">
          <label for="nome" class="form-label">Nome</label>
          <input type="text" class="form-control" name="nome" id="nome" placeholder="Insira seu nome" required>
        </div>
        <div class="col-md-12">
            <label for="email" class="form-label">Email Adress</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Insira seu gmail" required>
        </div>
        <div class="col-md-12">
            <label for="RUT" class="form-label">RUT</label>
            <input type="text" class="form-control" name="RUT" id="RUT" pattern="[0-9]*" placeholder="Insira seu RUT" required>
        </div>
        <div class="col-md-12">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Insira sua senha" required>
        </div>
        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" onclick="showPassword()">
            <label class="form-check-label" for="gridCheck">
              Show Password
            </label>
            <script>
                function showPassword() {
                    var x = document.getElementById("password");
                    if (x.type === "password") {
                        x.type = "text";
                    } else {
                        x.type = "password";
                    }
                }
            </script>
          </div>
        </div>
        <div class="col-12">
          <button class="btn btn-dark">Sign Up</button>
        </div>
    </form>
    </div>

<%- include('partials/footer') %>