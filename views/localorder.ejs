<%- include('partials/header') %>

    <form action="/local_order" method="POST">
    
        <div id="local-order-title">Local Order</div>

        <div id="local-order-div">

            <div id="distribuidor-div">

                <label for="distribuidor-opcoes" id="distribuidor-label">Distribuidor</label>
                <select name="distribuidor-opcoes" id="distribuidor-select">
                    <option value="distribuidor">Escolha um Distribuidor</option>
                    <option value="eua">EUA</option>
                    <option value="mexico">México</option>
                    <option value="Chile">Chile</option>
                </select>

            </div>
            
            <div id="linguagem-div">

                <label for="linguagem-opcoes" id="linguagem-label">Linguagem</label>
                <select name="linguagem-opcoes" id="linguagem-select">
                    <option value="linguagem">Escolha uma linguagem</option>
                    <option value="ingles">Inglês</option>
                    <option value="espanhol">Espanhol</option>
                </select>

            </div>

            <div id="contrato-div">

                <label for="contrato-opcoes" id="contrato-label">Contrato</label>
                <select name="contrato-opcoes" id="contrato-select">
                    <option value="contrato">Escolha uma forma de contrato</option>
                    <option value="unico">Único Jogo</option>
                    <option value="multiplos">Multiplos Jogos</option>
                </select>
        
            </div>

            <div id="jogos-div">

                <label for="jogos-opcoes" id="jogos-label">Jogos (até 5)</label>
                <select name="jogos-opcoes" id="jogos-select" size="5">
                    <option value="jogos">Escolha até 5 jogos</option>
                    <option value="halloween">Halloween</option>
                    <option value="valentinesday">Valentine's Day</option>
                    <option value="eastersunday">Easter Sunday</option>
                    <option value="newyear">New Year</option>
                    <option value="lunarnewyear">Lunar New Year</option>
                    <option value="thanksgiving">Thanksgiving</option>
                    <option value="diademuertos">Día de Muertos</option>
                </select>

                <textarea name="jogos-opcoes" id="jogos-input-text" cols="50" rows="5" wrap="hard" readonly placeholder="Seus jogos"></textarea>
        
            </div>

            <div id="placas-div">

                <label for="placas-opcoes" id="placas-label">Placas (até 10)</label>
                <input type="number" name="placas" id="placas-input" min="0" max="10">
        
            </div>

            <div id="local-div">

                <label for="local-opcoes" id="local-label">Local</label>
                <input type="text" name="local" id="local-input" maxlength="30">

            </div>

            <div id="cidade-div">

                <label for="cidade-opcoes" id="cidade-label">Cidade</label>
                <input type="text" name="cidade" id="cidade-input">

            </div>

        </div>
    
    </form>

    <script type="text/javascript" src="js/localorder.js"></script>

<%- include('partials/footer') %>