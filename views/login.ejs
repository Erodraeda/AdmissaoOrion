<%- include('partials/navbar') %>

  <a href="/home">Home Page</a>
  <br>

    <div id="main-body">
    <form id="login" class="row g-3" action="/login" method="POST">
        <div class="col-md-12">
            <label for="email" class="form-label">Email Adress</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Insira seu gmail" required>
        </div>
        <div class="col-md-12">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Insira sua senha" required>
        </div>
        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" onclick="showPassword()">
            <label class="form-check-label" for="gridCheck">
              Show Password
            </label>
            <script>
                function showPassword() {
                    var x = document.getElementById("password");
                    if (x.type === "password") {
                        x.type = "text";
                    } else {
                        x.type = "password";
                    }
                }
            </script>
          </div>
        </div>
        <div class="col-12">
          <button class="btn btn-dark" id="login-page-button">Sign in</button>
        </div>
      </form>
    </div>

